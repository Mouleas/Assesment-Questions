@{
    if (ViewData["err"] != "")
    {
        <p style="color:red">@(ViewData["err"])</p>
    }
}



<form asp-action="Create">
    <input placeholder="Enter file name" required name="filename" id="filename"/><br /><br />
    <textarea name="text-area" style="width:1000px; height:300px" id="text-area">@(ViewData["content"])</textarea><br />
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-danger">Cancel</a>
</form>

<a href="" download="output.txt" id="dbtn" onclick="Download()">Download</a>


<script>
    var filename = document.getElementById("filename").value;
   function Download() {
        var data = document.getElementById("text-area").value;
        console.log(data);
        this.href = "data:text/plain;charset=UTF-8," + encodeURIComponent(data);
   }
</script>
