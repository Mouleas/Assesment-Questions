<h1>Text Editor</h1><br />


<a asp-action="Create" class="btn btn-success">Create a new file</a>

<h3>OR</h3>

<form asp-action="Index">
    <input type="text" required name="filename"/>
    <button type="submit" class="btn btn-warning">Open file</button>
    @{
        if (ViewData["err"] != "")
        {
            <p style="color: red">@(ViewData["err"])</p>
        }
    }
</form>






